{{#each posts as |post|}}
<div class="display-flex justify-center w-100">
    <a href="/post/{{post.id}}">
<div class='each-post'>
    
        <p class="">
            {{post.title}}
        </p>
        <p class="self-end">
            {{post.user.username}}
            {{format_date post.createdAt}}
        </p>
    
   
</div>
</a>
</div>
{{/each}}